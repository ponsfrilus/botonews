<%- include('partials/header', {css: 'profile.css' }); -%>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.2/axios.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.0.0/core.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/3.1.9-1/md5.js"></script>
  <div class="container">
  <div class="alert alert-success alert-dismissible fade show" style="display: none;" id="alert" role="alert">
      <strong>Done!</strong> Your profile has been updated.
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="row gutters">
      <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
        <div class="profile-menu p-3 rounded border-secondary">
          <div class="user-profile">
            <div class="user-avatar">
              <img id="profile-picture" src="" alt="Account profile picture">
              <script>
                $("#profile-picture").attr("src", `https://www.gravatar.com/avatar/${CryptoJS.MD5("<%= user.email %>")}?d=identicon`)
              </script>
            </div>
            <h5 class="user-name">
              <%= user.username %>
            </h5>
            <h6 class="user-email">
              <%= user.email %>
            </h6>
          </div>
          <div class="other-settings">
            <h5 class="mb-2 underline">Other settings</h5>
            <a href="/profile/personal-details">Personal details</a><br>
            <a href="/profile/subscriptions">Subscriptions</a><br>
            <a href="/profile/linked-accounts">Linked accounts</a><br><br>
            <a href="/logout">Logout</a>
            <hr>
            <a href="/"><button class="btn btn-sm btn-primary">Back to homepage</button></a>
          </div>
        </div>
      </div>
      <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
        <div class="profile-main p-3 rounded border-secondary">
          <% if(path=='/profile/personal-details' || path=='/profile' || path=='/profile/') { %>
            <%- include('partials/personal-details'); -%>
          <% } else if(path.includes('/profile/settings')) { %>
            <%- include('partials/settings'); -%>
          <% } else if(path=='/profile/linked-accounts') { %>
            <%- include('partials/linked-accounts'); -%>
          <% } else if(path=='/profile/subscriptions') { %>
            <%- include('partials/subscriptions'); -%>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer'); -%>
